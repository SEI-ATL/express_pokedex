<div class="container">
  <h1 class="text-center">The Original 151 Pokemon</h1>
  <p class="text-center">
    <a href="/pokemon">Favorites</a>
  </p>

  <% pokemon.forEach(poke=> { %>
    <div class="well">
      <h2>
        <span>
          <img src="<%= poke.sprite %> " alt="pokemon">
        </span><%= poke.name %></h2>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= poke.name %>">
        <input hidden type="text" name="pokemonId" value="<%= poke.id %> ">
        <button class="btn btn-primary" type="submit">Add to Favorite Pokemon</button>
      </form>
    </div>
  <% }) %>
  
</div>
