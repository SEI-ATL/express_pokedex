<div class="container">
    <h1 class="text-center">The Original 151 Pokemon</h1>
    <p class="text-center">
        <a href="/pokemon">Favorites</a>
    </p>
    <div class="pokeList">

        <% pokemon.forEach(function(pokemon) { %>
            <div class="well op">
                <h2>
                    <%= pokemon.name.slice(0,1).toUpperCase() + pokemon.name.slice(1,pokemon.name.length) %>
                </h2>
                <form method="GET" action="/pokemon/<%= pokemon.name %>">
                    <input hidden type="text" name="name" value="<%= pokemon.name %>">
                    <button class="btn btn-primary" type="submit">View Details</button>
                </form>
                <form method="POST" action="/pokemon">
                    <input hidden type="text" name="name" value="<%= pokemon.name %>">
                    <button class="btn btn-primary" type="submit">Add to Pokedex</button>
                </form>
            </div>
            <% }); %>
    </div>
</div>