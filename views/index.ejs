<% let capitalize = string => { %>
<% let lowerCase = string.slice(1); %>
<% return string.charAt(0).toUpperCase() + lowerCase; %>
<% } %>

<div class="container">

  <% pokemon.forEach(function(pokemon) { %>
  <div class="well">
    <h3><%= capitalize(pokemon.name); %></h3>
    <form method="POST" action="/pokemon">
      <input hidden type="text" name="name" value="<%= capitalize(pokemon.name); %>">
      <button class="btn btn-primary" type="submit">Add to Favorite Pokemon</button>
    </form>
  </div>
  <% }); %>

</div>