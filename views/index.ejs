<div class="container">
  <h1 class="text-center">The Original 151 Pokemon</h1>
  <p class="text-center">
    <a href="/pokemon">Favorites</a>
  <div id="scroll">
  </p>
 
  <% pokemon.forEach(function(pokemon) { 
    let upperPoke=pokemon.name 
    let upperPokeStr =upperPoke[0].toUpperCase() + upperPoke.slice(1);
    
    %>
    <div class="well">
      <h2><%= upperPokeStr %></h2>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <button class="btn btn-primary" type="submit">Add to Favorite Pokemon</button>
      </form>
    </div>
  <% }); %>
</div>  
</div>
<style>
  .well {
    background-color: burlywood;
  }
 body {
   position: relative;
 }
  #scroll {
    background-color: darkblue;
  height: 640px;
  overflow: scroll;
  
}
</style>