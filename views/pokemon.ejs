<div class="container">
    <h1 class="text-center">Favorite Pokemon</h1>
    <p class="text-center">
        <a href="/">Home</a>
    </p>

    <% pokemon.forEach(function(pokemon) { %>
        <div class="well">
            <h2>
                <%= pokemon.name.slice(0,1).toUpperCase() + pokemon.name.slice(1,pokemon.name.length) %>
            </h2>
            <form method="GET" action="/pokemon/<%= pokemon.name %>">
                <button class="btn btn-primary" type="submit">View details</button>
            </form>
            <form method="POST" action="/pokemon/<%= pokemon.name %>">
                <button class="btn btn-primary" type="submit">Remove from Favorites</button>
            </form>
        </div>
        <% }); %>
</div>