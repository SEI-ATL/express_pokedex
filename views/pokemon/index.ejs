<div class="container">
    <% pokemon.forEach((pokemon) => { %>
        <div class="well">
            <h2>
                <a href="/pokemon/<%= pokemon.name %>"><%= pokemon.name%></a>
             
                <form action="/pokemon/<%= pokemon.name %>?_method=DELETE" method="POST">
                    <input type="submit" value="Remove from faves" class="btn-danger">
                </form>
            </h2>
        </div>
    <% }) %>
</div>